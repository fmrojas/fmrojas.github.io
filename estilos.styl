/*Media query para el menu desplegable con responsive*/
@media (max-width: 768px){
  .MainMenu label{
    display block
    }
  .MainMenu-list{
    background #2B2E31
    text-align center
    position absolute
    top 3.8em
    width 70%
    margin-left -70%
    transition all 0.5s
  }
  .MainMenu-item{
    display block
    border-bottom 1px solid #f66509
  }
  .MainMenu-link:hover{
    border-bottom none
  }
  .MainMenu-link:active{
    transition none !important
  }

  #btn-menu:checked ~ .MainMenu-list{
    margin 0

  }
}
